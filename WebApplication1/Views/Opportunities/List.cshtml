@model IEnumerable<WebApplication1.Models.Opportunity>

@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Professor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mentor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Begin_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.End_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Required_skills)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Search_tags)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Professor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mentor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Begin_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End_date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Required_skills)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Search_tags)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OpportunityID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OpportunityID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OpportunityID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
